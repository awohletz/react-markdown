{
  "include": ["lib/**/*.ts", "test/**/*.tsx", "test/**/*.ts", "index.ts"],
  "exclude": ["**/*.min.js"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true
  }
}
